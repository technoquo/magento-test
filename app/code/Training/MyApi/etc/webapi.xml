<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/calculator/add/:num1/:num2" method="GET">
        <service class="Training\MyApi\Api\CalculatorInterface" method="add"/>  <!--ok -->
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route method="GET" url="/V1/training-myapi/post/:param">
		<service class="Training\MyApi\Api\PostManagementInterface" method="getPost"/><!--ok -->
		<resources>
			<resource ref="anonymous"/>
		</resources>
	</route>
    <route method="GET" url="/V1/training-myapi/testaction/:params">
        <service class="Training\MyApi\Api\TestActionManagementInterface" method="testaction"/> <!--ok -->
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route> 
     <route method="GET" url="/V1/training-myapi/productos">
        <service class="Training\MyApi\Api\MisProductostInterface" method="getList"/> 
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>   
</routes>
